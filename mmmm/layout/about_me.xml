<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F6"
    android:orientation="vertical"
    tools:context="com.aboutme.AboutMe"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:background="@color/transparent"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="30dp"
           android:background="@drawable/head2"

            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:text="abc"
            android:textSize="20sp"
            android:textColor="@color/black"
            />


            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="我的订单"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:text="查看全部订单>"
                android:textSize="13sp"
                android:padding="10dp"
                android:background="@null"
                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <Button
            android:id="@+id/btn__daifu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="10dp"
           android:background="@drawable/daifu"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/btn_daifa"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="10dp"
           android:background="@drawable/daifahuo"
            android:layout_marginLeft="40dp"
            />
        <Button
            android:id="@+id/btn_daishou"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="10dp"
           android:background="@drawable/daishouhuo"
            android:layout_marginLeft="40dp"
            />
        <Button
            android:id="@+id/btn_pingjia"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:padding="10dp"
            android:background="@drawable/pingjia"
            android:layout_marginLeft="40dp"
            />
        <Button
            android:id="@+id/btn_shouhou"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="10dp"
            android:background="@drawable/shouhou"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/txt__daifu"
            android:layout_width="60dp"
            android:layout_height="40dp"
           android:text="待付款"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/txt_daifa"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="待发货"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/txt_daishou"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="待收货"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:id="@+id/txt_pingjia"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="评价"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginLeft="10sp"
            />
        <TextView
            android:id="@+id/txt_shouhou"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="退款/售后"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/transparent"
        >
        <Button
            android:id="@+id/my_quit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="退出登录"
            android:padding="8dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="14sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="bottom"
        android:padding="5dp"


        >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/first" />

        <TextView
            android:id="@+id/txt_backkey"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/btn_back"
            android:layout_marginLeft="15dp"
            android:text="首页"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_choose"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@+id/btn_back"
            android:background="@drawable/seriouschoose" />


        <Button
            android:id="@+id/btn_member"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@+id/btn_choose"
            android:background="@drawable/vip" />

        <TextView
            android:id="@+id/txt_member"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/btn_member"
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@+id/txt_backkey"
            android:text="会员"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_shopping"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@+id/btn_member"
            android:background="@drawable/shopcar" />

        <TextView
            android:id="@+id/txt_shopping"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_below="@+id/btn_member"
            android:layout_marginLeft="52dp"
            android:layout_toRightOf="@+id/txt_member"
            android:text="购物车"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_my"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="62dp"
            android:layout_toRightOf="@+id/btn_shopping"
            android:background="@drawable/my" />

        <TextView
            android:id="@+id/txt_my"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_below="@+id/btn_my"
            android:layout_marginLeft="45dp"
            android:layout_toRightOf="@+id/txt_shopping"
            android:text="我的"
            android:textSize="10sp" />
    </RelativeLayout>
</LinearLayout>
